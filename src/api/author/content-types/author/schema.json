{
	"kind": "collectionType",
	"collectionName": "authors",
	"info": {
		"singularName": "author",
		"pluralName": "authors",
		"displayName": "Author",
		"description": "Create authors for your content"
	},
	"options": {
		"increments": true,
		"timestamps": true,
		"draftAndPublish": false
	},
	"attributes": {
		"name": {
			"type": "string",
			"required": true
		},
		"slug": {
			"type": "uid",
			"targetField": "name"
		},
		"thumbnail": {
			"type": "media",
			"multiple": false,
			"required": false,
			"allowedTypes": ["images"]
		},
		"description": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"social": {
			"type": "component",
			"repeatable": true,
			"component": "shared.array"
		},
		"social_array": {
			"type": "array",
			"configurable": false,
			"visible": false
		},
		"skills": {
			"type": "component",
			"repeatable": true,
			"component": "shared.array"
		},
		"skills_array": {
			"type": "array",
			"configurable": false,
			"visible": false
		},
		"articles": {
			"type": "relation",
			"relation": "oneToMany",
			"target": "api::article.article",
			"mappedBy": "author"
		}
	}
}
