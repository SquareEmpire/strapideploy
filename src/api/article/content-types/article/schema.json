{
	"kind": "collectionType",
	"collectionName": "articles",
	"info": {
		"singularName": "article",
		"pluralName": "articles",
		"displayName": "Article",
		"description": "Create your blog content"
	},
	"options": {
		"increments": true,
		"timestamps": true,
		"draftAndPublish": false
	},
	"attributes": {
		"title": {
			"type": "string",
			"required": true
		},
		"slug": {
			"type": "uid",
			"targetField": "title"
		},
		"date": {
			"type": "datetime",
			"required": true
		},
		"author": {
			"type": "relation",
			"relation": "manyToOne",
			"target": "api::author.author",
			"inversedBy": "articles"
		},
		"category": {
			"type": "relation",
			"relation": "manyToOne",
			"target": "api::category.category",
			"inversedBy": "articles"
		},
		"thumbnail": {
			"type": "media",
			"multiple": false,
			"required": false,
			"allowedTypes": ["images"]
		},
		"body": {
			"type": "richtext",
			"required": true
		},
		"featured": {
			"type": "boolean"
		},
		"private": {
			"type": "boolean"
		},
		"link": {
			"type": "string"
		},
		"tags": {
			"type": "component",
			"repeatable": true,
			"component": "shared.array"
		},
		"tags_array": {
			"type": "array",
			"configurable": false,
			"visible": false
		},
		"keywords": {
			"type": "component",
			"repeatable": true,
			"component": "shared.array"
		},
		"keywords_array": {
			"type": "array",
			"configurable": false,
			"visible": false
		},
		"thumbnailText": {
			"type": "string"
		}
	}
}
